<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hanchor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:background">@color/primary_color</item>
    </style>

    <!--  Used to remove plain background before splash screen background, set in Manifest for SplashScreenActivity-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--  This theme is set before super.onCreate(savedInstanceState) in SplashScreenActivity-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="myFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_fab</item>
        <item name="materialThemeOverlay">@style/myFabOverlay</item>
    </style>

    <style name="myFabOverlay">
        <item name="colorSecondary">@color/accent</item>
        <!-- color used by the icon -->
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="hanchor">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#3AB0FF</item>
    </style>

    <style name="MyRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/radio_color</item>
    </style>

    <style name="fifteen" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/myFifteen</item>
    </style>

    <style name="myFifteen">
        <item name="android:src">@drawable/ic_15</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="thirty" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/myThirty</item>
    </style>

    <style name="myThirty">
        <item name="android:src">@drawable/ic_30</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="done" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/markAsDone</item>
    </style>

    <style name="markAsDone">
        <item name="android:src">@drawable/ic_done</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>


</resources>