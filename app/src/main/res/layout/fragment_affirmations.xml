<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.fragments.home.affirmations.AffirmationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/navigate_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/placeholder_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:text="@string/my_affirmations"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_bar">

                <TextView
                    android:id="@+id/hey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/hey"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/sojimi"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/hey"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:text="Choose an \naffirmation topic"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hey" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/default_affirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/choose">

                    <TextView
                        android:id="@+id/btn_prosperity"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/prosperity"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/prosperity_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_love"
                        android:layout_width="114dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/love"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/love_png"
                        app:layout_constraintStart_toEndOf="@id/btn_prosperity"
                        app:layout_constraintTop_toTopOf="@id/btn_prosperity" />

                    <TextView
                        android:id="@+id/btn_iam"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/iam"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/i_am_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_love" />

                    <TextView
                        android:id="@+id/btn_family"
                        android:layout_width="125dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/family"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/family_png"
                        app:layout_constraintStart_toEndOf="@id/btn_iam"
                        app:layout_constraintTop_toTopOf="@id/btn_iam" />

                    <TextView
                        android:id="@+id/btn_self_esteem"
                        android:layout_width="161dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/self_esteem"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/self_esteem_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_family" />

                    <TextView
                        android:id="@+id/btn_spiritual"
                        android:layout_width="136dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/spiritual"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/spiritual_png"
                        app:layout_constraintStart_toEndOf="@id/btn_self_esteem"
                        app:layout_constraintTop_toTopOf="@id/btn_self_esteem" />


                    <TextView
                        android:id="@+id/btn_beauty"
                        android:layout_width="129dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/beauty"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/beauty_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_spiritual" />

                    <TextView
                        android:id="@+id/btn_success"
                        android:layout_width="138dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/success"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/success_png"
                        app:layout_constraintStart_toEndOf="@id/btn_beauty"
                        app:layout_constraintTop_toTopOf="@id/btn_beauty" />

                    <TextView
                        android:id="@+id/btn_relationship"
                        android:layout_width="163dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/relationship"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/relationship_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_success" />

                    <TextView
                        android:id="@+id/btn_health"
                        android:layout_width="126dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/health"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/health_png"
                        app:layout_constraintStart_toEndOf="@id/btn_relationship"
                        app:layout_constraintTop_toTopOf="@id/btn_relationship" />

                    <TextView
                        android:id="@+id/btn_business"
                        android:layout_width="139dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/business"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/business_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_health" />

                    <TextView
                        android:id="@+id/btn_self_forgiveness"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/forgiveness"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/forgiveness_png"
                        app:layout_constraintStart_toEndOf="@id/btn_business"
                        app:layout_constraintTop_toTopOf="@id/btn_business" />

                    <TextView
                        android:id="@+id/btn_self_improvement"
                        android:layout_width="197dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/self_improvement"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/self_improvement_png"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_self_forgiveness" />

                    <TextView
                        android:id="@+id/btn_ican"
                        android:layout_width="105dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/affirmation_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/i_can"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/i_can_png"
                        app:layout_constraintStart_toEndOf="@id/btn_self_improvement"
                        app:layout_constraintTop_toTopOf="@id/btn_self_improvement" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_ican" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>